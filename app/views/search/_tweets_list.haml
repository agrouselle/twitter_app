- if @tweets && @tweets.size > 0
  %table.table.table-striped
    %thead
      %tr
        %th User
        %th Tweet
        %th Date
    %tbody
      - @tweets.each do |status|
        %tr
          %td
            = status.from_user
          %td
            = status.text
          %td.date
            = status.created_at.strftime(DATE_FORMAT_LONG)